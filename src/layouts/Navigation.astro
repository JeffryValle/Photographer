<!-- NAVBAR -->
<nav class="fixed top-0 left-0 right-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8 lg:px-12 lg:max-w-full">
        <!-- Logo + Links-->
        <div class="flex items-center justify-around h-24">
            <!-- Logo -->
            <div class="shrink-0">
                <a href="/" class="text-white text-2xl font-bold"
                    >Photographer</a
                >
            </div>

            <!-- Desktop / Tablet Menu (visible from sm and up) -->
            <div
                class="hidden sm:flex sm:items-center sm:space-x-4 sm:gap-4 sm:text-lg
               md:space-x-8 md:gap-4 md:text-lg
               lg:space-x-12 lg:text-lg font-bold lg:gap-8"
            >
                <a href="/" class="text-white hover:text-gray-200 transition"
                    >Work</a
                >
                <a
                    href="/portrait"
                    class="text-white hover:text-gray-200 transition"
                    >Portrait</a
                >
                <a
                    href="/about"
                    class="text-white hover:text-gray-200 transition">About</a
                >
                <a
                    href="/contact"
                    class="text-white hover:text-gray-200 transition">Contact</a
                >
            </div>

            <!-- Mobile Menu Button (visible on xs only) -->
            <div class="sm:hidden">
                <button
                    id="mobile-menu-button"
                    aria-controls="mobile-menu"
                    aria-expanded="false"
                    class="p-2 rounded-md inline-flex items-center justify-center text-white hover:bg-white/10 focus:outline-none focus:ring-2 focus:ring-white/30 cursor-pointer"
                >
                    <span class="sr-only">Abrir menú principal</span>
                    <!-- Icono "hamburger" -->
                    <svg
                        id="icon-open"
                        class="w-6 h-6"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        aria-hidden="true"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                    <!-- Icono "close" (oculto por defecto) -->
                    <svg
                        id="icon-close"
                        class="w-6 h-6 hidden"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        aria-hidden="true"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile Menu Panel -->
    <div
        id="mobile-menu"
        class="sm:hidden hidden transition-all duration-300 ease-in-out"
    >
        <div
            class="px-4 pt-4 pb-6 space-y-2 flex flex-col justify-center items-center"
        >
            <a
                href="/"
                class="block px-3 py-2 rounded-md text-base font-medium text-white hover:bg-white/5"
                >Work</a
            >
            <a
                href="/portafolio"
                class="block px-3 py-2 rounded-md text-base font-medium text-white hover:bg-white/5"
                >Portrait</a
            >
            <a
                href="/about"
                class="block px-3 py-2 rounded-md text-base font-medium text-white hover:bg-white/5"
                >About</a
            >
            <a
                href="/contact"
                class="block px-3 py-2 rounded-md text-base font-medium text-white hover:bg-white/5"
                >Contact</a
            >
        </div>
    </div>
</nav>

