---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <div class="min-h-screen w-full bg-black">
        <div
            class="min-h-screen w-full flex flex-col items-center justify-center px-4 sm:px-6 lg:px-8 py-16 sm:py-24"
        >
            <h1
                class="text-4xl sm:text-5xl md:text-6xl font-bold text-white tracking-tight"
            >
                Contact Me
            </h1>
            <h2 class="mt-4 text-base sm:text-lg md:text-xl text-gray-300">
                I'd love to hear from you
            </h2>

            <!-- <div
                class="flex justify-center items-center w-50 h-50 bg-amber-300"
            >
            </div> -->
            <br />
            <form action="#" method="post">
                <div
                    class="flex flex-col space-y-5 sm:w-4xl sm:flex sm:flex-col sm:justify-center sm:items-center mt-8 max-w-xl lg:w-xl mx-auto gap-6"
                >
                    <input
                        type="text"
                        name="name"
                        placeholder="Your Name"
                        class="pl-5 pr-3 py-3 h-12 rounded-md bg-gray-800/80 text-white border border-white/30 focus:outline-none focus:border-white backdrop-blur-sm sm:w-xs lg:w-xl"
                        required
                    />

                    <input
                        type="email"
                        name="email"
                        placeholder="Your Email"
                        class="pl-5 pr-3 py-3 h-12 rounded-md bg-gray-800/80 text-white border border-white/30 focus:outline-none focus:border-white backdrop-blur-sm sm:w-xs lg:w-xl"
                        required
                    />
                    <textarea
                        name="message"
                        rows="5"
                        placeholder="Your Message"
                        class="pl-5 pr-3 py-3 rounded-md bg-gray-800/80 text-white border border-white/30 focus:outline-none focus:border-white backdrop-blur-sm sm:w-xs lg:w-xl"
                        required></textarea>
                    <button
                        type="submit"
                        class="bg-[#292727] h-12 cursor-pointer text-white py-3 rounded-md hover:text-black hover:bg-white transition duration-300 sm:w-xs lg:w-xl px-8"
                    >
                        Send Message
                    </button>
                </div>
            </form>
        </div>
    </div>
</Layout>
