---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <div class="min-h-[calc(100vh-10vh)] w-full bg-black">
        <div
            class="min-h-[calc(100vh-120px)] w-full flex flex-col items-center justify-center px-4 sm:px-6 lg:px-8 py-16 sm:py-24"
        >
            <h1
                class="text-4xl sm:text-5xl md:text-6xl font-bold text-white tracking-tight"
            >
                Contact Me
            </h1>
            <h2 class="mt-4 text-base sm:text-lg md:text-xl text-gray-300">
                I'd love to hear from you
            </h2>

            <!-- <div
                class="flex justify-center items-center w-50 h-50 bg-amber-300"
            >
            </div> -->
            <br />
            <form action="#" method="post">
                <div
                    class="flex flex-col space-y-5 sm:w-4xl sm:flex sm:flex-col sm:justify-center sm:items-center mt-8 max-w-xl lg:w-xl mx-auto gap-6"
                >
                    <input
                        type="text"
                        name="name"
                        placeholder="Your Name"
                        class="pl-5 pr-3 py-3 h-12 rounded-md bg-gray-800/80 text-white border border-white/30 focus:outline-none focus:border-white backdrop-blur-sm sm:w-xs lg:w-xl"
                        required
                    />

                    <input
                        type="email"
                        name="email"
                        placeholder="Your Email"
                        class="pl-5 pr-3 py-3 h-12 rounded-md bg-gray-800/80 text-white border border-white/30 focus:outline-none focus:border-white backdrop-blur-sm sm:w-xs lg:w-xl"
                        required
                    />
                    <textarea
                        name="message"
                        rows="5"
                        placeholder="Your Message"
                        class="pl-5 pr-3 py-3 rounded-md bg-gray-800/80 text-white border border-white/30 focus:outline-none focus:border-white backdrop-blur-sm sm:w-xs lg:w-xl"
                        required></textarea>
                    <button
                        type="submit"
                        class="bg-[#292727] h-12 cursor-pointer text-white py-3 rounded-md hover:text-black hover:bg-white transition duration-300 sm:w-xs lg:w-xl px-8"
                    >
                        Send Message
                    </button>
                </div>

                <div class="mt-16 sm:mt-20 max-w-xl mx-auto px-4">
                    <!-- More information-->
                    <br />
                    <br />
                    <div class="py-8 sm:py-10">
                        <h3
                            class="text-xl sm:text-2xl font-semibold text-white mb-6 text-center"
                        >
                            Get in Touch
                        </h3>
                        <p
                            class="text-gray-300 mb-8 leading-relaxed text-center mx-auto"
                        >
                            Whether you're interested in booking a photo
                            session, purchasing prints, or collaborating on a
                            creative project, I'm here to help bring your vision
                            to life. I typically respond to all inquiries within
                            24-48 hours.
                        </p>

                        <div class="space-y-6 sm:space-y-8 text-gray-300">
                            <br />
                            <br />
                            <div class="flex items-start gap-3">
                                <svg
                                    class="w-6 h-6 mt-1 text-white shrink-0"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                    ></path>
                                </svg>
                                <div>
                                    <p class="font-medium text-white">Email</p>
                                    <p class="text-sm">
                                        contact@photographer.com
                                    </p>
                                </div>
                            </div>

                            <div class="flex items-start gap-3">
                                <svg
                                    class="w-6 h-6 mt-1 text-white flex-shrink-0"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                                    ></path>
                                </svg>
                                <div>
                                    <p class="font-medium text-white">
                                        Availability
                                    </p>
                                    <p class="text-sm">
                                        Monday - Friday: 9:00 AM - 6:00 PM
                                    </p>
                                    <p class="text-sm">
                                        Weekends: By appointment only
                                    </p>
                                </div>
                            </div>

                            <div class="flex items-start gap-3">
                                <svg
                                    class="w-6 h-6 mt-1 text-white flex-shrink-0"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                    ></path>
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                                    ></path>
                                </svg>
                                <div>
                                    <p class="font-medium text-white">
                                        Location
                                    </p>
                                    <p class="text-sm">
                                        Available for shoots worldwide
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</Layout>
