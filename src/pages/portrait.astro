---
import ImageModal from "../components/ImageModal.astro";
import Layout from "../layouts/Layout.astro";
import PortafolioSection from "../components/PortafolioSection.astro";
---

<Layout>
    <div
        class="min-h-screen w-full bg-black pb-70
                md:h-full md:w-full
                lg:h-full lg:w-full
                xl:h-auto xl:w-full"
    >
        <div class="h-65 w-full flex flex-col items-center justify-end">
            <h1 class="text-white">Portrait</h1>
            <h2 class="text-white">A collection of moments</h2>
        </div>

        <div class="w-full">
            <div class="h-10 w-full"></div>
            <PortafolioSection />
        </div>
    </div>
    <ImageModal />
</Layout>
